<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#EBEBEB ">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="10dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="@dimen/p1"
            android:background="@android:color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:id="@+id/img_avatar"
                android:layout_marginEnd="@dimen/p1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_toEndOf="@id/img_avatar"
                android:layout_alignTop="@id/img_avatar"
                android:layout_marginTop="1dp"
                android:text="avator"
                android:textColor="#001529"
                android:id="@+id/txt_name"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxEms="10"/>

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#6F6F6F"
                android:text="他很懒什么都没有留下"
                android:layout_toEndOf="@id/img_avatar"
                android:layout_below="@+id/txt_name"
                android:layout_marginTop="@dimen/p2"
                android:id="@+id/txt_personal_introduction"
                android:ellipsize="end"
                android:maxLines="2"
                android:maxEms="46"
                />

            <ImageView
                android:layout_width="16sp"
                android:layout_height="16sp"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:id="@+id/img_into"
                android:src="@drawable/ic_right_arraw"/>

        </RelativeLayout>

    </LinearLayout>

</layout>