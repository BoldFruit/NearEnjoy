<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/rlayout_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:src="@drawable/pic_no_search_result" />

            <TextView
                android:id="@+id/txt_problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_no_search_result"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/p1"/>

            <Button
                android:id="@+id/btn_retry"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/p1"
                android:background="@drawable/bg_tag_gray"
                android:text="@string/btn_retry"
                android:textSize="14sp"
                />
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</layout>