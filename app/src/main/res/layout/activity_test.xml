<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.TestActivity">

    <com.example.lib_common.checkpoint.CheckPoint
        app:cp_normal_color="@color/white"
        app:cp_checked_color="@color/app_colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

       <com.example.lib_common.view.EasyRoundView
           android:layout_centerInParent="true"
           app:circle_center_y="8dp"
           app:circle_center_x="8dp"
           app:circle_radius="8dp"
           app:background_color="@color/app_grey_line"
           android:layout_width="16dp"
           android:layout_height="16dp"/>
       <CheckBox
           android:layout_centerHorizontal="true"
           style="@style/CheckBoxStyle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </RelativeLayout>

</LinearLayout>