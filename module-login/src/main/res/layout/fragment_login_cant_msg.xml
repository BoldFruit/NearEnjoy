<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/login_normal_margin_start"
        android:layout_marginEnd="@dimen/login_normal_margin_end">

        <LinearLayout
            android:layout_marginTop="@dimen/login_normal_layout_margin_top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/login_input_txt"
                    android:textSize="14sp"
                    android:text="您的手机号"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/login_txt_cant_msg_phone"
                    android:textColor="@color/login_input_txt"
                    android:textSize="14sp"
                    android:text="130-8185-9820"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/login_input_txt"
                    android:textSize="14sp"
                    android:text="无法收到信息？"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:text="您可以先核实下："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/login_min_margin_2"
                android:text="1.是否输错手机号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/login_min_margin_2"
                android:text="2.手机是否设置拦截短信"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="@dimen/login_normal_layout_margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.login.view.ui.LoginRelativeBtn
                    android:id="@+id/login_btn_give_up_phone"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="40dp"
                    app:center_txt="此号已弃用"
                    app:normal_btn="@drawable/login_bg_login_btn_enter_main_complete"
                    app:enable_btn="@drawable/login_bg_login_btn_enter_main_complete"
                    app:enable_txt="@color/login_white"
                    app:normal_txt="@color/login_white"/>
                <com.example.login.view.ui.LoginRelativeBtn
                    android:id="@+id/login_btn_back_to_main"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    app:center_txt="返回登陆界面"
                    app:normal_btn="@drawable/login_bg_login_btn_enter_main_complete"
                    app:enable_btn="@drawable/login_bg_login_btn_enter_main_complete"
                    app:enable_txt="@color/login_white"
                    app:normal_txt="@color/login_white"/>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</layout>